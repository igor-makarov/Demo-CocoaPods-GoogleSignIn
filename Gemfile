# frozen_string_literal: true

source "https://rubygems.org"

def cocoapods_branch
  ENV['COCOAPODS_BRANCH'] || 'master'
end

gem 'cocoapods', :git => 'https://github.com/igor-makarov/CocoaPods.git', :branch => cocoapods_branch
gem 'cocoapods-core', :git => 'https://github.com/igor-makarov/Core.git', :branch => cocoapods_branch
